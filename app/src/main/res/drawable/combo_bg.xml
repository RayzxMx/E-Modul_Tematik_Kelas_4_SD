<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape untuk radius corner -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#E1F5FE" /> <!-- Ganti dengan warna latar belakang yang Anda inginkan -->
        </shape>
    </item>
    <!-- Efek bayangan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E1F5FE" /> <!-- Warna bayangan -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
